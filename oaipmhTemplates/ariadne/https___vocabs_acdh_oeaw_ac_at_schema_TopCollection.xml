<rdf:RDF
    xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
    xmlns:owl="http://www.w3.org/2002/07/owl#"
    xmlns:crm="http://www.cidoc-crm.org/cidoc-crm/"
    xmlns:crmpe="http://parthenos.d4science.org/CRMext/CRMpe.rdfs/"
    xmlns:aocat="https://www.ariadne-infrastructure.eu/resource/ao/cat/1.1/"
    xmlns:lexvo="http://lexvo.org/id/iso639-2/"
    xmlns:skos="http://www.w3.org/2004/02/skos/core#"
    xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
    xmlns:ariadneplus="https://ariadne-infrastructure.eu/aocat/">

<aocat:AO_Collection val="URI" asAttribute="rdf:about">
    <rdfs:label val="URI" count="1"></rdfs:label>
    <aocat:has_identifier val="/acdh:hasNonLinkedIdentifier" count="*"></aocat:has_identifier>
    <aocat:has_identifier val="/acdh:hasIdentifier" count="*"></aocat:has_identifier>
    <aocat:has_original_id val="/acdh:hasPid" count="1"></aocat:has_original_id>
    
    <!-- there should only be one original id, I decided for the handle to be it, the rest are in the has_identifier -->
    <!-- TODO
    <aocat:has_type></aocat:has_type> 
    matches acdh:hasCategory, but the domain of hasCategory must be first set to (top)collections - currently only for binary classes 
     -->
    
    <aocat:has_title val="/acdh:hasTitle" count="*" lang="true"></aocat:has_title>
    
    <aocat:has_description val="/acdh:hasDescription" count="*" lang="true"></aocat:has_description>
    
    <aocat:was_issued val="/acdh:hasAvailableDate" count="1" rdf:datatype="http://www.w3.org/2001/XMLSchema#dateTime" dateFormat="Y-m-d"></aocat:was_issued>
    <aocat:was_created_on val="/acdh:hasCreatedEndDate" count="1" rdf:datatype="http://www.w3.org/2001/XMLSchema#dateTime" dateFormat="Y-m-d"></aocat:was_created_on>
    <aocat:was_modified val="/acdh:hasUpdatedDate" count="*" rdf:datatype="http://www.w3.org/2001/XMLSchema#dateTime" dateFormat="Y-m-d"></aocat:was_modified>
    
    <aocat:has_landing_page>
        <owl:Thing val="/acdh:hasPid" asAttribute="rdfs:about">
            <rdfs:label val="/acdh:hasPid"></rdfs:label>
        </owl:Thing> 
    </aocat:has_landing_page>
   
    <aocat:has_access_policy> 
        <owl:Thing rdf:about="https://arche.acdh.oeaw.ac.at/browser/terms-of-use">
            <rdfs:label>"https://arche.acdh.oeaw.ac.at/browser/terms-of-use"</rdfs:label>
        </owl:Thing>
    </aocat:has_access_policy>
    

    <aocat:has_access_rights val="/acdh:hasLicenseSummary" count="1" lang="true"></aocat:has_access_rights>
    <aocat:has_extent val="acdh:hasExtent" count="*" lang="true"></aocat:has_extent>
    <aocat:has_language ComponentId="ariadneLanguage" val="@acdh:hasLanguage" count="*"/> 

    <aocat:has_publisher>    
        <aocat:AO_Agent>
            <aocat:has_homepage>
                <owl:Thing rdf:about="https://www.oeaw.ac.at/">
                    <rdfs:label>https://www.oeaw.ac.at/</rdfs:label>
                </owl:Thing>
            </aocat:has_homepage>
            <aocat:has_name xml:lang="en">Austrian Academy of Sciences (OeAW)</aocat:has_name>
            <rdfs:label>Austrian Academy of Sciences (OeAW)</rdfs:label>
        </aocat:AO_Agent>
    </aocat:has_publisher>

    <!-- Publisher for ARIADNE is OeAW and is formatted and hardcoded according to the rules they provided. -->

    <aocat:has_creator ComponentId="ariadneCreator" val="@acdh:hasCreator" count="*"/>
    <aocat:has_creator ComponentId="ariadneCreator" val="@acdh:hasAuthor" count="*"/>
    <aocat:has_owner ComponentId="ariadneOwner" val="@acdh:hasOwner" count="*"/>
    <aocat:has_responsible ComponentId="ariadneResponsible" val="@acdh:hasContact" count="*"/>
    <aocat:has_contributor ComponentId="ariadneContributor" val="@acdh:hasContributor" count="*"/>

    <aocat:has_spatial_coverage ComponentId="ariadnePlace" val="@acdh:hasSpatialCoverage" count="+"/>

    <!--
    <aocat:has_temporal_coverage>
        <aocat:AO_Temporal_Region> 
            <aocat:has_period val="/acdh:hasTemporalCoverageIdentifier" asAttribute="rdf:resource" match="^http://n2t.net/ark:/" count="*"></aocat:has_period>
        </aocat:AO_Temporal_Region>
    </aocat:has_temporal_coverage>    
    --> 

    <aocat:has_temporal_coverage ComponentId="ariadnePeriod" val="@acdh:hasTemporalCoverageIdentifier" count="*"/>
     
    <aocat:has_temporal_coverage ComponentId="ariadneNativePeriod" val="@acdh:hasTemporalCoverage" count="*" lang="true"/>

    <aocat:has_temporal_coverage>
        <aocat:AO_Temporal_Region>
            <aocat:from val="/acdh:hasCoverageStartDate" aggregate="min" count="1" rdf:datatype="http://www.w3.org/2001/XMLSchema#dateTime" dateFormat="o"></aocat:from>
            <aocat:until val="/acdh:hasCoverageEndDate" aggregate="max" count="1" rdf:datatype="http://www.w3.org/2001/XMLSchema#dateTime" dateFormat="o"></aocat:until>
        </aocat:AO_Temporal_Region>
    </aocat:has_temporal_coverage>

    <!-- It has been requested by ARIADNE to provide temporal periods individually and not all within a single AO_Temporal_Region with argumentation, that each period is a period on its own. -->    

    <aocat:has_native_subject ComponentId="ariadneNativeSubject" val="@acdh:hasSubject" count="*" lang="true"/>
   
    <aocat:has_ARIADNE_subject>
       <aocat:AO_Concept>
        <skos:prefLabel val="/acdh:hasSubject" match="^(Site and monument|Fieldwork|Fieldwork report|Scientific analysis|Date|Artefact|Coin|Building survey|Fieldwork archive|Maritime|Inscription|Rock art|Burial)$" count ="1" lang="true"></skos:prefLabel>
       </aocat:AO_Concept> 
    </aocat:has_ARIADNE_subject>

    <aocat:refers_to ComponentId="ariadneActor" val="@acdh:hasActor" count="*"/> 

    <!-- aocat:has_derived_subject ; is calculated from has_native_subject via vocabulary mapping to Getty AAT -->

</aocat:AO_Collection>

</rdf:RDF>
