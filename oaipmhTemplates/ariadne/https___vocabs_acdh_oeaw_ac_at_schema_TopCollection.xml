    xmlns:skos="http://www.w3.org/2004/02/skos/core#"
    xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
    xmlns:ariadneplus="https://ariadne-infrastructure.eu/aocat/">

<aocat:AO_Collection val="URI" asAttribute="rdf:about">
    <aocat:has_identifier val="/acdh:hasNonLinkedIdentifier" count="*"></aocat:has_identifier>
    <aocat:has_original_id val="/acdh:hasIdentifier" count="*"></aocat:has_original_id>
    <aocat:has_type></aocat:has_type> <!-- TODO: !-->
    <aocat:has_title val="/acdh:hasTitle" count="*" lang="true"></aocat:has_title>
    <aocat:has_description val="/acdh:hasDescription" count="*" lang="true"></aocat:has_description>
    <aocat:was_issued val="/acdh:hasAvailableDate" count="1" dateFormat="Date"></aocat:was_issued>
    <aocat:was_created_on val="/acdh:hasAvailableDate" count="1" dateFormat="Date"></aocat:was_created_on> <!-- how is this different from was_issued?-->
    <aocat:was_modified val="/acdh:hasUpdatedDate" count="*" dateFormat="Date"></aocat:was_modified>

    <aocat:has_language>
        <aocat:AO_Concept val="acdh:hasLanguage" asAttribute="rdf:about">
            <skos:prefLabel val="@acdh:hasLanguage/acdh:hasTitle" count="*" lang="true"></skos:prefLabel>
        </aocat:AO_Concept>
    <!-- longer TODO: link our lang vocab to lexvo.org -->
    <!-- and also find a way to inlude the shortcodes instead of the full language-->
    </aocat:has_language>
    
    <aocat:has_landing_page val="acdh:hasPid" asAttribute="rdf:resource"></aocat:has_landing_page>

    <aocat:has_access_policy rdf:resource="https://arche.acdh.oeaw.ac.at/browser/terms-of-use"/>
    <aocat:has_access_rights val="acdh:hasLicense" count="*" lang="true"></aocat:has_access_rights>

    <aocat:has_extent val="acdh:hasExtent" count="*" lang="true"></aocat:has_extent>

    <aocat:has_publisher ComponentId="ariadnePublisher" val="@acdh:hasPublisher" count="+"/>
    <aocat:has_creator ComponentId="ariadneCreator" val="@acdh:hasCreator" count="+"/>
    <aocat:has_creator ComponentId="ariadneCreator" val="@acdh:hasAuthor" count="*"/>
    <aocat:has_owner ComponentId="ariadneOwner" val="@acdh:hasOwner" count="+"/>
    <aocat:has_responsible ComponentId="ariadneResponsible" val="@acdh:hasContact" count="+"/>
    <aocat:has_contributor ComponentId="ariadneContributor" val="@acdh:hasContributor" count="+"/>


